[data-atom=li][data-extend=thumbnail]
  padding: 0px !important
  width: 100%
  display: block !important
  > figure
    display: block
    width: 100%
    height: 7rem
    margin: 0
    border-radius: 0px
    background-position: 50%

  > div
    padding: .5rem
    > strong
      display: block
      font-weight: FONT_WEIGHT_BOLD
      font-size: FONT_SIZE_SMALL
      overflow: hidden
      white-space: nowrap
      text-overflow: ellipsis
